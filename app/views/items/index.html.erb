<div class="row justify-content-center">
    <div class="col-12 col-md-8">
        <h1 style="text-align: center;">Your items</h1>
        <% @items.each do |item| %>
        <div class="card-trip">
            <div class="card-information">
                <%= link_to '', edit_item_path(item), class:"fas fa-cog setting-wheel" %>
                <h2><%= item.name %></h2>
                <h5><%= item.description %></h5>
                <p>$<%= item.min_price %></p>
                <p>-</p>
                <p>$<%= item.max_price %></p>
            </div>
            <div class="image-items">
                <% item.pictures.each do |picture| %>
                <%= cl_image_tag picture.key, class: "items-image" %>
                <% end %>
                <%= link_to 'SWIPE WITH THIS ITEM', potential_matches_item_path(item)  %>
            </div>
        </div>
        <% end %>
        <%= link_to 'Upload an item', new_item_path  %>
        <%# link_to 'show page button', item_path(item) %>
    </div>
</div>


