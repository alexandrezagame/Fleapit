<div class="row justify-content-center">
    <div class="col-6">
        <h1>Your items</h1>
        <% if user_signed_in? %>
        <% @items.each do |item| %>
          <div class="card-trip">
            <%= cl_image_tag item.picture.key, height: 300, width: 400, crop: :fill %>
            <div class="card-trip-infos">
              <%= item.name %>
              <%= item.description %>
              <%= link_to 'Edit', edit_item_path(item) %>
            </div>
          </div>
        <% end %>
        <%= link_to 'Upload an item', new_item_path  %>
        <% else %>
        <%= f.button :submit, "Sign up", class:"button" %>
    <% end %>
    </div>
</div>
