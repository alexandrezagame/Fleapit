<div class="row justify-content-center">
    <div class="col-8">
        <h1 style="text-align: center;">Your items</h1>
        <% @items.each do |item| %>
        <div class="card-trip">
          <div class="card-information">
            <div>
              <h2><%= item.name %></h2>
              <p><%= item.description %></p>
            </div>
            <div>
            <%= link_to 'Destroy', item_path(item), class: "button-small", method: :delete  %>
            </div>
          </div>
          <div class="image-items">
            <%= cl_image_tag item.picture.key, class: "items-image", height: 300, width: 400, crop: :fill %>
            <%= cl_image_tag item.picture.key, class: "items-image", height: 300, width: 400, crop: :fill %>
            <%= cl_image_tag item.picture.key, class: "items-image", height: 300, width: 400, crop: :fill %>
          </div>
        </div>
        <% end %>
        <%= link_to 'Upload an item', new_item_path  %>
    </div>
</div>


