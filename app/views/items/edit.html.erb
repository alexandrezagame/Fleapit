<div class="big-container">
    <%= render 'shared/vertical-navbar' %>
    <div class="row justify-content-center">
        <div class="col-8">
            <h1 style="text-align: center;">Edit item</h1>
            <div class="card-trip">
                <div class="card-information">
                    <%= render 'form', item: @item %>
                    <%= link_to 'Back', items_path  %>
                    <%= link_to 'Destroy', item_path(@item), method: :delete, data: {confirm: "Are you sure you want to delete this item?"}  %>
                </div>
            </div>
        </div>
    </div>
</div>


