    <%= f.input :brand %>
    <%= f.input :description, as: :text, :input_html => { :cols => 5, :rows => 5 }%>
    <%= f.input :category, :collection => ['Home & decorations', "Women's clothes", "Men's clothes", 'Accessories', 'Electronics', 'Outdoors', 'Hobby', 'Tools'] %>
    <%= f.input :min_price %>
    <%= f.input :max_price %>
    <%= f.input :pictures, as: :file, input_html: { class: 'd-none', multiple: true }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload photos' %>
    <div class="form-button">
    <%= link_to 'Back', items_path, class: "button" %>
    <%= f.submit class: "button" %>
    </div>
  <% end %>
